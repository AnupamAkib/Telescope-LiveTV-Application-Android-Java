<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <ImageView
        android:id="@+id/channelLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/nointernet"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/channelToLoad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONNECTION ERROR!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:layout_below="@+id/channelLogo"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sugg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="১. ইন্টারনেট আছে কিনা চেক করুন\n২. এই ডিভাইস Wifi এর সাথে সংযুক্ত কিনা চেক করুন\n৩. রাউটার বন্ধ করে চালু করুন\n\nIf you are still facing the issue, then maybe Telescope backend server is down. Please send a report at 'mirakib25@gmail.com'"
        android:textColor="@color/black"
        android:layout_below="@+id/channelToLoad"
        android:textSize="17sp" />

    <Button
        android:id="@+id/settings_nav_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sugg"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/lightGray"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:text="Go to app settings" />


</RelativeLayout>
